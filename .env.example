# AIOperator Environment Configuration
# Copy this file to .env and fill in your values

# OpenRouter API (for Claude LLM access)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Default LLM model (Claude via OpenRouter)
LLM_MODEL=anthropic/claude-3.5-sonnet

# Browser settings
BROWSER_TYPE=chrome
BROWSER_HEADLESS=false

# Database
DATABASE_PATH=./data/aioperator.db

# Encryption (generated on first run if not set)
# ENCRYPTION_KEY=

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/aioperator.log
